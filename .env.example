# Copy this file to .env and fill in your values

# LLM Configuration
LLM_PROVIDER=google
LLM_API_KEY=your-gemini-api-key-here
LLM_MODEL=gemini-2.5-flash-preview-05-20

# Telegram Notification Settings (Required)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id

# Twilio SMS Settings (Optional - if using SMS)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890
NOTIFICATION_PHONE_NUMBER=+1234567890

# Purdue Email Settings (if using IMAP for Purdue)
PURDUE_EMAIL=your-email@purdue.edu
PURDUE_IMAP_SERVER=outlook.office365.com
PURDUE_IMAP_PORT=993

# Microsoft OAuth for Purdue (if using OAuth2)
PURDUE_CLIENT_ID=your-azure-app-client-id
PURDUE_CLIENT_SECRET=your-azure-app-client-secret
PURDUE_TENANT_ID=your-tenant-id-or-common

# Monitoring Settings
POLL_INTERVAL_SECONDS=60
PROCESS_ONLY_UNREAD=true
MAX_LOOKBACK_HOURS=24
DATABASE_PATH=sentinel.db

# Logging Settings
LOG_LEVEL=INFO
LOG_DIR=logs
DISABLE_FILE_LOGGING=false

# Mailboxes configuration file path
MAILBOXES_CONFIG_PATH=config/mailboxes.yaml